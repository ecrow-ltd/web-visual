{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es2015"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./.lib",
    "outDir": "./.lib",
    "removeComments": true,
    "types": ["webpack-env", "react", "styled-components", "jest"],
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@theme/*": ["src/theme/*"],
      "@story/*": ["src/story/*"],
      "@component/*": ["src/component/*"]
    }
  },
  "include": ["./src/components/index.ts"]
}
