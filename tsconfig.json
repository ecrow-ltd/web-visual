{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": ".lib",
    "outDir": ".lib",
    "types": ["react", "styled-components", "jest", "webpack-env"],
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@theme/*": ["src/theme/*"],
      "@story/*": ["src/story/*"],
      "@library/*": ["src/library/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
