{
  "name": "@ecrow-ltd/web-visual",
  "library": "web-visual",
  "version": "1.0.0",
  "description": "A minimal pure JavaScript component library for the web.",
  "private": false,
  "main": "./index.js",
  "types": "./index.d.ts",
  "files": [
    ".dist",
    ".lib"
  ],
  "scripts": {
    "clean": "npm run clean:lib && npm run clean:dist",
    "clean:dist": "rimraf ./.dist/*",
    "clean:lib": "rimraf ./.lib/*",
    "build": "npm run build:lib && npm run build:dist",
    "build:dist": "npm run build:dist:dev && npm run build:dist:prod",
    "build:dist:dev": "webpack --dest distribution --mode development --config config/webpack.config.js",
    "build:dist:prod": "webpack --dest distribution --mode production --config config/webpack.config.js",
    "build:lib": "tsc -p ./tsconfig.lib.json",
    "build:storybook": "build-storybook -c ./config/storybook -s ./public -o .build",
    "build:doc": "jsdoc src -c ./jsdoc.config.json",
    "lint": "tslint ./src/**/*.ts{,x}",
    "start": "npm run start:storybook",
    "start:lib": "nodemon --exec 'yarn build:lib' --watch ./src",
    "start:storybook": "start-storybook -p 2769 -s ./public -c ./config/storybook",
    "test": "jest --config=./config/jest/jest.config.js ./src",
    "new": "node ./scripts/new.js",
    "dev": "webpack --progress --colors --watch --env dev --config config/webpack.config.js",
    "repl": "node -i -e \"$(< ./lib/web-visual.js)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecrow-ltd/web-visual.git"
  },
  "keywords": [
    "webpack",
    "es6",
    "library",
    "universal",
    "umd",
    "commonjs"
  ],
  "author": "Eric Crowell",
  "license": "ISC",
  "homepage": "https://github.com/ecrow-ltd/web-visual#readme",
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-info": "^5.2.8",
    "@storybook/addon-knobs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "@types/enzyme": "^3.10.4",
    "@types/jest": "^24.0.25",
    "@types/react-test-renderer": "^16.9.1",
    "@types/storybook__addon-info": "^5.2.1",
    "@types/webpack-env": "^1.14.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^24.9.0",
    "nodemon": "^2.0.2",
    "react-docgen-typescript-loader": "^3.6.0",
    "react-test-renderer": "^16.12.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.4",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1"
  }
}
